<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.linux.vehiculo2.AcercaDe">>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/log" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="42dp"
            android:layout_height="35dp"
            android:layout_weight="0.03"
            android:background="@color/colorPrimaryDark"
            android:onClick="fina"
            app:srcCompat="?android:attr/homeAsUpIndicator" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:gravity="bottom|center_vertical|fill_vertical|center_horizontal"
            android:text="Vehiculos Pasto"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/holo_purple"
            android:textColorLink="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|fill_vertical"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realizado Por: Karol Burgos Narvaez" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presentado A: Franklin" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingenieria de sistemas" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:layout_weight="0.58"
            app:srcCompat="@drawable/carro" />
    </LinearLayout>

</LinearLayout>
